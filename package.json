{
  "private": true,
  "engines": {
    "node": ">= 8.0.0"
  },
  "workspaces": {
    "packages": [
      "redux-saga-state-machine",
      "xstate-to-svg",
      "examples/*",
      "website"
    ]
  },
  "scripts": {
    "start": "lerna run start --parallel",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "publish": "lerna publish --conventional-commits --yes",
    "junit-merge": "junit-merge ./examples/kitchen-sink/junit.xml ./redux-saga-state-machine/junit.xml ./xstate-to-svg/junit.xml --out ./junit.xml"
  },
  "devDependencies": {
    "lerna": "3.4.3",
    "junit-merge": "2.0.0"
  }
}
